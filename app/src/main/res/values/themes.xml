<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TPSEmbedding" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TPSEmbedding" parent="Base.Theme.TPSEmbedding" />

    <style name="Theme.TPSEmbedding.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom style for Toolbar title text appearance -->
    <style name="CustomTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LegendText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleChartText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom TabLayout Style -->
    <style name="BirdpredictionTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>   <!--     -->
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">@style/bpredictionTabText</item>
        <item name="tabBackground">@drawable/birdprediction_tab_background</item>
        <item name="android:background">@drawable/bprediction_tablayout_bground</item>
        <item name="tabRippleColor">@color/tabBgroundColor</item>
    </style>

    <!-- Custom Tab Text Appearance -->
    <!--    <style name="bpredictionTabText" parent="TextAppearance.Design.Tab">-->
    <style name="bpredictionTabText" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Custom popup theme -->
    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/tabBgroundColor</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="CustomPopupTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--        <item name="android:itemBackground">@color/tabBgroundColor</item>-->
        <!--        <item name="android:textColor">@color/black</item>-->
        <item name="android:itemBackground">#FFFBFE</item>
        <!--        <item name="android:background">@android:color/transparent</item>-->
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
    </style>
</resources>